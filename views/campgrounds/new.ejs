<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div style="width: 50%; margin: 40px auto">
			<h1 class="text-center"> Create a new campground </h1>
			<form action="/campgrounds" method="POST">
			  <div class="form-group">
				<label for="campgroundName">Name</label>
				<input type="text" class="form-control" name="campground[name]"  placeholder="Enter Campground's Name">
			  </div>
			  <div class="form-group">
				<label for="campgroundLink">Image Link</label>
				<input type="text" class="form-control" name="campground[image]" placeholder="Enter Campground's Link">
			  </div>			  
			  <div class="form-group">
				<label for="campgroundPrice">Campground's Price</label>
				<input type="number" class="form-control" name="campground[price]" placeholder="Price" min="0.01" step="0.01">
			  </div>
			  <div class="form-group">
				<label for="campgroundDesc">Campground's Description</label>
				<input type="text" class="form-control" name="campground[description]" placeholder="Enter Campground's Description">
			  </div>
			  <div class="form-group">
			  <button type="submit" class="btn btn-primary btn-block">Submit</button>
			  </div>
			</form>
			<a href="/campgrounds">Go back to see available campgrounds</a>	
		</div>	
	</div>	
</div>

<% include ../partials/footer %>